{% extends 'base.html.twig' %}

{% block title %}RessourcePack index{% endblock %}

{% block body %}
<section class="content-header">
    <h1>
        Ressource Packs
        <small>Liste</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Ressources Pack</li>
        <li class="active">Liste</li>
    </ol>
</section>

<div class="dashboard1">

    <div class="row">
        <div class="col-md-12 text-right mb-4">
            <a href="{{ path('config_ressourcepack_new') }}" class="btn btn-sm btn-success"><i class="fa fa-plus"></i>
                Cr√©er</a>
        </div>
    </div>
    <div class="col-md-12 table-responsive">

        <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Taille</th>
                <th>Md5</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ressource_pack in ressource_packs %}
            <tr>
                <td>{{ ressource_pack.idName }}</td>
                <td>{{ ressource_pack.name }}</td>
                <td>{{ ressource_pack.size }}</td>
                <td>{{ ressource_pack.md5 }}</td>
                <td>
                    <a href="{{ path('config_ressourcepack_show', {'id': ressource_pack.id}) }}" class="btn btn-sm btn-success">Voir</a>
                    <a href="{{ path('config_ressourcepack_edit', {'id': ressource_pack.id}) }}" class="btn btn-sm btn-warning">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <script>
            $(document).ready(() => {
                $('#myTable').dataTable()
            })
        </script>
    </div>


</div>
{% endblock %}
