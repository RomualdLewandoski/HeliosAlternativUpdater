{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            Panel
            <small>Accueil</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Accueil</li>
        </ol>
    </section>

    <div class="dashboard1">
        <div class="row">
            <div class="col-xl-4 col-lg-6 col-12">
                <div class="counter-box">
                    <div class="shadow bg1">
                        <div class="text-white text-center">
                            <i class="fa fa-windows fa-2x"></i>
                            <div class="mt-2">Windows</div>
                            <h3 class="mt-1 count">{{ stat.windowsLauncher }}</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-6 col-12">
                <div class="counter-box">
                    <div class="shadow bg2">
                        <div class="text-center text-white">
                            <i class="fa fa-linux fa-2x"></i>
                            <div class="mt-2">Linux</div>
                            <div class="money"><h3 class="mt-1 count">{{ stat.linuxLauncher }}</h3></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-6 col-12">
                <div class="counter-box">
                    <div class="shadow bg3">
                        <div class="text-center text-white">
                            <i class="fa fa-apple fa-2x"></i>
                            <div class="mt-2">Mac</div>
                            <h3 class="mt-1 count">{{ stat.macLauncher }}</h3>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
