{% set currentPath = app.request.get('_route') %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Admin</title>


    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap/bootstrap.min.css') }}">
    {% if currentPath == "app_login" %}
        <link rel="stylesheet" href="{{ asset("assets/css/custompages/login1.css") }}">
        {% elseif currentPath == "app_register" %}
    <link rel="stylesheet" href="{{ asset("assets/css/custompages/register.css") }}">
    {% else %}
        <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,400i,500,500i,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://cdn.rawgit.com/enyo/dropzone/master/dist/dropzone.css">
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/tables/datatables.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/tables/buttons.dataTables.min.css') }}">
        <!-- Custom CSS Starts -->
    <link rel="stylesheet" href="{{ asset('assets/css/skin/all-skins.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/general/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/sidebar/side-nav.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/nanoscroller/nanoscroller.css') }}">
        <!-- Page CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/mailbox/inbox.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/dashboard/dashboard1.css') }}">
    <link rel="stylesheet" href="{{ asset("assets/fontawesome/css/all.css") }}">

    <link rel="stylesheet" id="nightMode" href="{{ asset('assets/css/skin/night.css') }}">
        <script>
            var nigth = "{{ asset('assets/css/skin/night.css') }}"
            var mode = localStorage.getItem("mode");
            if (mode == undefined || mode == false) {
                localStorage.setItem("mode", "day")
            } else {
                if (mode == "day") {
                    document.getElementById("nightMode").setAttribute("href", "")
                }
            }
        </script>


    {% endif %}
    <link rel="stylesheet" href="{{ asset('assets/css/fonts/fonts-style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/fontawesome-iconpicker.css') }}">
    {# Artgris FileManager #}
    <link rel="stylesheet" href="{{ asset('bundles/artgrisfilemanager/libs/blueimp-file-upload/css/jquery.fileupload.css') }}">
    {# Import fengyuanchen/cropper #}
    <link rel="stylesheet" href="{{ asset('bundles/artgrismedia/libs/cropperjs-1.4.1/cropper.min.css') }}">
    {# Then the default bundle's CSS #}
    <link rel="stylesheet" href="{{ asset('bundles/artgrismedia/css/media.css') }}">

    <script src="{{ asset('assets/js/bootstrap/bootstrap.min.js') }}"></script>

    <script src="{{ asset('assets/js/jquery/jquery.min.js') }}"></script>
</head>

<body class="{% if currentPath == "app_login" %} bg-login {% elseif currentPath == "app_register" %} bg-register {% else %}sidebar-mini fixed skin-blue{% endif %}">
<div class="wrapper">
    {% if currentPath != "app_login" and currentPath != "app_register" %}
        {% block topbar %}
            {% embed "includes/topbar.html.twig" %}
            {% endembed %}
        {% endblock topbar %}

        {% block sideBar %}
            {% embed 'includes/sidebar.html.twig' %}
            {% endembed %}
        {% endblock sideBar %}
    {% endif %}

    <div class="content-wrapper">
        {% block body %}

        {% endblock body %}

    </div>

    {% if currentPath != "app_login" and currentPath != "app_register" %}
        <a href="javascript:" id="return-to-top"><i class="fa fa-arrow-up" aria-hidden="true"></i></a>

        <footer class="main-footer">
            <div class="pull-right hidden-xs pr-2">
                Version 1.0.0
            </div>
            <p class="mb-0"></p>
        </footer>

    {% endif %}

</div>
{% if currentPath != "app_login" and currentPath != "app_register" %}

    <!--<script src="{{ asset('assets/js/jquery/popper.min.js') }}"></script>-->
    <!-- Bootstrap JS -->
    <!-- Page JS -->
    <script src="{{ asset('assets/js/charts/Chart.bundle.min.js') }}"></script>
    <script src="{{ asset('assets/js/charts/bar/grouped-bar-chart.js') }}"></script>
    <script src="{{ asset('assets/js/charts/pie/doughnut-chart-multiline.js') }}"></script>
    <script src="{{ asset('assets/js/dashboard/dashboard1.js') }}"></script>
    <!-- Theme JS -->
    <script src="{{ asset('assets/js/nanoscroller/nanoscroller.js') }}"></script>
    <script src="{{ asset('assets/js/custom/theme.js') }}"></script>
    <script src="https://cdn.rawgit.com/zenorocha/clipboard.js/v2.0.4/dist/clipboard.min.js"></script>
    <script src="{{ asset('assets/js/tables/datatables.min.js') }}"></script>
    <script src="{{ asset('assets/js/tables/dataTables.buttons.min.js') }}"></script>
    <script src="{{ asset('assets/js/fontawesome-iconpicker.js') }}"></script>
    <script>

        $(document).ready(() => {
            if (localStorage.getItem("mode") == "day") {
                $('#themeIcon').addClass("fa-moon-o")
            } else {
                $('#themeIcon').addClass("fa-sun-o")
            }
            $('.icp-auto').iconpicker();

            $('#themeSwitch').click((event) => {
                event.preventDefault()
                if (localStorage.getItem("mode") == "day") {
                    localStorage.setItem("mode", "nigth")
                    $('#nightMode').attr('href', nigth)
                    $('#themeIcon').addClass("fa-sun-o")
                    $('#themeIcon').removeClass("fa-moon-o")
                } else {
                    localStorage.setItem("mode", "day")
                    $('#nightMode').attr('href', "")
                    $('#themeIcon').addClass("fa-moon-o")
                    $('#themeIcon').removeClass("fa-sun-o")
                }
            })
        })
    </script>
    {#  Jqueri UI #}
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous"></script>
    {# jquery.collection.js #}
    <script type="text/javascript" src="{{ asset('assets/js/jquery.collection.js') }}"></script>
    {# Import fengyuanchen/cropper #}
    <script src="{{ asset('bundles/artgrismedia/libs/cropperjs-1.4.1/cropper.min.js') }}"></script>
    {# Then the default bundle's JavaScript: #}
    {% include '@ArtgrisMedia/assets/include_js.html.twig' %}

{% endif %}

</body>
</html>