{% extends 'base.html.twig' %}

{% block title %}Version{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            VersionManifest
            <small>Voir</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
            <li>VersionManifest</li>
            <li class="active">Voir</li>
        </ol>
    </section>

    <div class="dashboard1">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ version.idName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ version.name }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ version.size }}</td>
            </tr>
            <tr>
                <th>Md5</th>
                <td>{{ version.md5 }}</td>
            </tr>
            <tr>
                <th>Chemin</th>
                <td>{{ version.url }}</td>
            </tr>
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-6 text-right">
                <a href="{{ path('config_version_edit', {'id': version.id}) }}"
                   class="btn btn-warning btn-lg">Editer</a>
            </div>
            <div class="col-md-6">
                <form method="post" action="{{ path('config_version_delete', {'id': version.id}) }}"
                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ version.id) }}">
                    <button class="btn btn-lg btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
        <a href="{{ path('config_version_index') }}"><i class="fa fa-arrow-left"></i> Retour Ã  la liste</a>


    </div>
{% endblock %}
