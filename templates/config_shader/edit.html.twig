{% extends 'base.html.twig' %}

{% block title %}Edit Shader{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            Shaders
            <small>Editer</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Shaders</li>
            <li class="active">Editer</li>
        </ol>
    </section>
    <div class="dashboard1">

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="row">
            <div class="col-md-6 text-right ">
                <button class="btn btn-lg btn-warning">{{ button_label|default('Modifier') }}</button>
                {{ form_end(form) }}
            </div>
            <div class="col-md-6 text-left">
                <form method="post" action="{{ path('config_shader_delete', {'id': shader.id}) }}"
                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ shader.id) }}">
                    <button class="btn btn-lg btn-danger">Supprimer</button>
                </form>

            </div>
        </div>

        <a href="{{ path('config_shader_index') }}"><i class="fa fa-arrow-left"></i> Retour Ã  la liste</a>

    </div>
{% endblock %}
