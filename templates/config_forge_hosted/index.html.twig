{% extends 'base.html.twig' %}

{% block title %}ForgeHosted index{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            Executables Forge
            <small>Liste</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Executables Forge</li>
            <li class="active">Liste</li>
        </ol>
    </section>

    <div class="dashboard1">

        <div class="row">
            <div class="col-md-12 text-right mb-4">
                <a href="{{ path('config_forge_hosted_new') }}" class="btn btn-sm btn-success"><i
                            class="fa fa-plus"></i>
                    Cr√©er</a>
            </div>
        </div>
        <div class="col-md-12 table-responsive">

            <table class="table" id="myTable">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Taille</th>
                    <th>Md5</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for forge_hosted in forge_hosteds %}
                    <tr>
                        <td>{{ forge_hosted.idName }}</td>
                        <td>{{ forge_hosted.name }}</td>
                        <td>{{ forge_hosted.size }}</td>
                        <td>{{ forge_hosted.md5 }}</td>
                        <td>
                            <a href="{{ path('config_forge_hosted_show', {'id': forge_hosted.id}) }}"
                               class="btn btn-sm btn-success">Voir</a>
                            <a href="{{ path('config_forge_hosted_edit', {'id': forge_hosted.id}) }}"
                               class="btn btn-sm btn-warning">Editer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <script>
                $(document).ready(() => {
                    $('#myTable').dataTable()
                })
            </script>
        </div>


    </div>
{% endblock %}
